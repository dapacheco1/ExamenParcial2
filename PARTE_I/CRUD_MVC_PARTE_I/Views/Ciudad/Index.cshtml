@model IEnumerable<CRUD_MVC_PARTE_I.Models.Ciudad>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_bootstrap3.cshtml";
}

<h2>Lista Ciudades</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id },new {@class="eliminar" })
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        $(".eliminar").click(function (event) {
                        if (!confirm("Estas seguro de eliminar este campo?Esta accion no puede deshacerse")) {
                event.preventDefault();
            }
            });
    </script>
}