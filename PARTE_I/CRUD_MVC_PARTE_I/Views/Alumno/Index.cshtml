@model IEnumerable<CRUD_MVC_PARTE_I.Models.AlumnoCE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_bootstrap3.cshtml";
}

<h2>Index</h2>

<p>
    
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Completo
        </th>

        <th>
            Edad
        </th>
        <th>
            Genero
        </th>
        <th>
            Ciudad
        </th>
        @*<th>
            Fecha de Alta
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Edad)
        </td>
        <td>
            @{ 
                @*if(item.Sexo == "M")
                {
                    <span>Masculino</span>
                }
                else
                {
                    <span>Femenino</span>
                }*@

                switch (item.Sexo)
                                {
                                    case "M":
                                        <span>Masculino</span>
                                        break;
                                    case "F":
                                        <span>Femenino</span>
                                        break;
                                    case "L":
                                        <span>Lesbiana</span>
                                        break;
                                    case "G":
                                        <span>Gay</span>
                                        break;
                                    case "B":
                                        <span>Bisexual</span>
                                        break;
                                    case "T":
                                        <span>Transexual</span>
                                    break;
                                    default:
                                        <span>No definido</span>
                                        break;
                            }
                        }
        </td>
        <td>
            @*@CRUD_MVC_PARTE_I.Controllers.AlumnoController.NombreCiudad(item.CodCiudad);*@
            @item.NombreCiudad
        </td>
        @*<td>

            @item.FechaRegistro.ToShortDateString();
        </td>*@
        <td>
            @Html.ActionLink("Editar", "Edit", new { Codigo=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { Codigo=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { Codigo=item.Id }, new { @class = "eliminar" })
        </td>
    </tr>
}

</table>

@section scripts{
    <script>
        $(".eliminar").click(function (event) {
                        if (!confirm("Estas seguro de eliminar este campo?Esta accion no puede deshacerse")) {
                event.preventDefault();
            }
            });
    </script>    
}